<div class="question-main">
  <div class="question-form">
<%= form_with model: @question, local: true do |form| %>
  <div class="form-top"></div>
  <div class="form-main">
    <div class="form-list">
      <div class="form-item"><%= form.text_field :title, placeholder: "タイトル" %></div>
      <div class="form-item"><%= form.text_area :content, placeholder: "質問内容" %></div>
      <div class="post-item"><%= form.text_field :name, placeholder: "投稿者名" %></div>
  <div class="post-button"><%= form.submit "POST" %></div>
  </div>
  </div>
    <% end %>
 </div>
</div>